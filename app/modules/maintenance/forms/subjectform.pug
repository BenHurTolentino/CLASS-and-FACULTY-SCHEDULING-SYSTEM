extends ../../../templates/master.pug

block content
    br
    br
    div.ui.container
        div.ui.centerer
            div.ui.segment.ping.p-adjust
                div.ui.container
                div.ui.ribbon.label.huge.inverted.blue 
                    p #{Subject ? 'Edit' : 'Add'} Subject
                .ui.container.inverted.teal.height3
                    form#form.ui.form.mleft(method="POST" action=`/maintenance/Subjects${Subject ? `/${Subject.strSubjectID}?_method=PUT`: '/new'}`)
                        div.ui.field
                            label.ui.large.teal.tag Subject Code
                            input(type="text" name="etid" value=Subject ? Subject.strSubjectID : '')
                        div.ui.field
                            label.ui.large.teal.tag Subject Description
                            input(type="text" name="etname" value=Subject ? Subject.strSubjectDesc : '')
                        div.ui.field
                            label.ui.large.teal.tag Subject Units
                            input(type="number" name="etunits" value=Subject ? Subject.intSubjUnits : '')
                        div#butt.warp2.height2
                            button#add.ui.labeled.orange.icon.button.rightp(type="submit")
                                i.add.icon
                                p #{Subject ? 'Update' : 'Add'}
                            a.button.ui.labeled.orange.icon.button.rightp(href="/maintenance/Subjects")
                                i.add.icon
                                p Back